#!/bin/bash

# function library for qyc

wp() {
    if [[ "$1" =~ ^(?=^.{4,253}$)(^(?:[a-zA-Z0-9](?:(?:[a-zA-Z0-9\-]){0,61}[a-zA-Z0-9])?\.)+[a-zA-Z]{2,}$)$ ]]; then
        domain="$1"
        shift
    else
        echo "" ; echo "Invalid domain: $1"
        print_help_wp
        exit
    fi
    while [[ "$#" -gt 0 ]]
    do
        case "$1" in
            -o|option)
                option="$2"
                shift
                ;;
            length)
                length="$2"
                shift
                ;;
            *)
                echo "" ; echo "Invalid option: $1"
                print_help_wp
                ;;
        esac
        shift
    done
    echo "option is $option"
    echo "length is $length"
    echo "domain is $domain"
}

mk() {
    if [[ "$1" == "wp" ]]; then
        shift
        wp "$@"
        else
        print_help_mk
    fi
}

