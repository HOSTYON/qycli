#!/bin/bash

# function library for qyc

wp() {
    if [[ "$1" == *"."* ]]; then
        domain="$1"
        [[ "$1" == www.* ]] && domain=$(echo "$1" | cut -c 5-)
        shift
    else
        echo "" ; echo "Invalid domain: $1"
        print_help_wp
        exit
    fi

    while [[ "$#" -gt 0 ]]; do
        case "$1" in
            -o|option)
                option="$2"
                shift
                ;;
            length)
                length="$2"
                shift
                ;;
            *)
                printf "\nInvalid option: $1"
                print_help_wp
                ;;
        esac
        shift
    done

    sudo cp /opt/qycli/cnf/nginx/sites/dmn.tld.conf /etc/nginx/sites-available/$domain
    echo "option is $option"
    echo "length is $length"
    echo "domain is $domain"
}

mk() {
    if [[ "$1" == "wp" ]]; then
        shift
        wp "$@"
        else
        print_help_mk
    fi
}

