[Unit]
Description=The NGINX HTTP and reverse proxy server for qycli
After=syslog.target network-online.target remote-fs.target nss-lookup.target
Wants=network-online.target

[Service]
Type=forking
PIDFile=/run/nginx.pid
ExecStartPre=/usr/local/qycli/nginx/sbin/nginx -t
ExecStart=/usr/local/qycli/nginx/sbin/nginx
ExecReload=/usr/local/qycli/nginx/sbin/nginx -s reload
ExecStop=/bin/kill -s QUIT $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
